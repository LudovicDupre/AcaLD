
public class Pyramide√©toileLD {

	public static void main(String[] args) {
		
	
			int row = 7;
			for (int i = 1; i <= row; i++) {
				for (int j = i-1; j>= 0 ; j--) {
					System.out.print(" ");
				}
				for (int j = 1; j < i*2; j+=2) {
					System.out.print("*");
				}
				System.out.println();
			}
			

	}

}
